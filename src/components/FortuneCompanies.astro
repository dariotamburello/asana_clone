---
const COMPANIES = [
  {
    id: "amazon",
    name: "Amazon",
    img: "/images/companies/amazon.webp",
  },
  {
    id: "accenture",
    name: "Accenture",
    img: "/images/companies/accenture.webp",
  },
  {
    id: "jj",
    name: "Johnson and Johnson",
    img: "/images/companies/JJ.webp",
  },
  {
    id: "dell",
    name: "Dell",
    img: "/images/companies/dell.webp",
  },
  {
    id: "merck",
    name: "Merck",
    img: "/images/companies/merck.webp",
  },
];
---

<section
  class="grid grid-cols-12 lg:items-center md:gap-10
  px-6 md:px-20 py-10 md:py-20 mb-5 md:mb-24 overflow-hidden"
>
  <div class="grid grid-cols-12 col-span-9 lg:col-span-4 mb-6">
    <h2 class="col-span-10 text-xl md:text-3xl">
      El 85 % de las empresas Fortune 100 prefieren AsanaÂ¹
    </h2>
  </div>
  <div class="flex flex-row col-span-12 lg:col-span-8 overflow-hidden gap-7">
    <div
      class="flex flex-row gap-7 animate-scroll whitespace-nowrap md:animate-none"
    >
      {
        COMPANIES.map((company) => (
          <picture id={company.id} class="h-20 w-24 lg:w-28">
            <img
              class="h-16 lg:h-20 object-cover"
              src={company.img}
              alt={`${company.name} logo`}
            />
          </picture>
        ))
      }
    </div>
    <div
      class="flex flex-row gap-7 animate-scroll whitespace-nowrap md:animate-none md:hidden"
    >
      {
        COMPANIES.map((company) => (
          <picture id={company.id} class="h-20 w-24">
            <img
              class="h-16 lg:h-20 object-cover"
              src={company.img}
              alt={`${company.name} logo`}
            />
          </picture>
        ))
      }
    </div>
  </div>
</section>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .animate-scroll {
    animation: scroll 15s linear infinite running;
  }
</style>
