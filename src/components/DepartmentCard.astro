---
import SubtitleH2 from "./textBlocks/SubtitleH2.astro";
import MainButton from "./buttons/MainButton.astro";

interface Props {
  id: string;
  img: string;
  subtitle: string;
  itemsText: Array<string>;
  buttonText: string;
}

const { id, img, subtitle, itemsText, buttonText } = Astro.props;
---

<div
  id={`card${id}`}
  class=`companyCard ${id==='allCompany' ? 'block' : 'hidden lg:hidden' } flex flex-col-reverse lg:grid lg:grid-cols-12 px-6 md:px-10 md:px-0 gap-12`
>
  <picture class="col-span-7">
    <img src={img} alt="" />
  </picture>
  <div class="col-span-5 flex flex-col gap-3 lg:gap-10">
    <SubtitleH2>{subtitle}</SubtitleH2>
    <ul class="list-disc px-5">
      {
        itemsText.map((item) => (
          <li class="text-base md:text-xl font-light mb-3">{item}</li>
        ))
      }
    </ul>
    <div>
      <MainButton class="border-2">{buttonText}</MainButton>
    </div>
  </div>
</div>
